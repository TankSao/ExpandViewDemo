<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.expandviewdemo.MainActivity" >

    <com.example.expandviewdemo.views.ExpandView
        android:id="@+id/expandview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="60dp"
        android:orientation="horizontal"></com.example.expandviewdemo.views.ExpandView>
	<RelativeLayout 
	    android:layout_width="60dp"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:background="@drawable/btn_selctor"
	    android:layout_alignTop="@id/expandview"
	    android:layout_alignBottom="@id/expandview"
	    android:id="@+id/sure"
	    >
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="确定"
	        android:textSize="14sp"
	        android:layout_centerInParent="true"/>
	</RelativeLayout>
    
</RelativeLayout>
